{
  "name": "privacy-advisor",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/prisma"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prisma:generate": "prisma generate --schema=infra/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema=infra/prisma/schema.prisma",
    "seed": "tsx infra/prisma/seed.ts",
    "licenses:report": "license-checker --summary --production --direct --json > LICENSES.json",
    "licenses:check": "node scripts/check-licenses.js",
    "spdx:check": "node scripts/check-spdx.js",
    "test:e2e": "./tests/e2e/scripts/run-tests.sh",
    "test:e2e:core": "./tests/e2e/scripts/run-tests.sh --suite core",
    "test:e2e:performance": "./tests/e2e/scripts/run-tests.sh --suite performance",
    "test:e2e:accessibility": "./tests/e2e/scripts/run-tests.sh --suite accessibility",
    "test:e2e:security": "./tests/e2e/scripts/run-tests.sh --suite security",
    "test:e2e:license": "./tests/e2e/scripts/run-tests.sh --suite license",
    "test:e2e:benchmarks": "./tests/e2e/scripts/run-tests.sh --suite benchmarking",
    "test:e2e:ui": "./tests/e2e/scripts/run-tests.sh --headless false",
    "test:e2e:firefox": "./tests/e2e/scripts/run-tests.sh --browser firefox",
    "test:e2e:webkit": "./tests/e2e/scripts/run-tests.sh --browser webkit",
    "playwright:install": "playwright install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.9.0",
    "@playwright/experimental-ct-react": "^1.55.1",
    "@playwright/test": "^1.55.1",
    "@prisma/client": "5.22.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "globals": "^14.0.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.3.3",
    "prisma": "5.22.0",
    "tsx": "^4.19.0",
    "turbo": "^2.0.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "sharp": "^0.34.4"
  }
}
