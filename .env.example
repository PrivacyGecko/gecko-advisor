# Privacy Advisor Backend Environment Variables

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173

# Database
DATABASE_URL=postgresql://privacy_advisor:password@localhost:5432/privacy_advisor

# Redis (for BullMQ and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication (REQUIRED)
# Generate a secure random string for production:
#   openssl rand -base64 32
# or:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin API Key (for /api/admin endpoints)
ADMIN_API_KEY=your-admin-api-key

# Content Security Policy
CSP_REPORT_URI=

# Sentry (optional, for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
USE_FIXTURES=0

# Cloudflare Turnstile (Bot Protection)
TURNSTILE_ENABLED=false
TURNSTILE_SECRET_KEY=
TURNSTILE_SITE_KEY=

# Object Storage (Hetzner / S3 Compatible)
OBJECT_STORAGE_ENABLED=false
OBJECT_STORAGE_ENDPOINT=
OBJECT_STORAGE_REGION=eu-central-1
OBJECT_STORAGE_BUCKET=
OBJECT_STORAGE_ACCESS_KEY=
OBJECT_STORAGE_SECRET_KEY=
OBJECT_STORAGE_REPORT_PREFIX=reports/
OBJECT_STORAGE_PUBLIC_URL=
OBJECT_STORAGE_FORCE_PATH_STYLE=true
OBJECT_STORAGE_SIGNED_URL_SECONDS=3600

# Solana Wallet Integration
# RPC endpoint for Solana blockchain queries
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# PRICKO token mint address (required after token launch)
PRICKO_TOKEN_MINT=
# Set to 'true' after token launch to enable real balance checking
# While 'false', all wallets return 10000 PRICKO (mock PRO-eligible balance)
PRICKO_TOKEN_LAUNCHED=false
