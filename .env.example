# Privacy Advisor Backend Environment Variables

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173

# Database
DATABASE_URL=postgresql://privacy_advisor:password@localhost:5432/privacy_advisor

# Redis (for BullMQ and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication (REQUIRED)
# Generate a secure random string for production:
#   openssl rand -base64 32
# or:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin API Key (for /api/admin endpoints)
ADMIN_API_KEY=your-admin-api-key

# Content Security Policy
CSP_REPORT_URI=

# Sentry (optional, for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
USE_FIXTURES=0

# 100% Free Launch Configuration
# No rate limits, no PRO tier, unlimited scans for everyone
UNLIMITED_SCANS=true
REQUIRE_AUTH_FOR_SCANS=false

# Cloudflare Turnstile (Bot Protection)
# Only security measure - no artificial user limits
TURNSTILE_ENABLED=true
TURNSTILE_SECRET_KEY=
TURNSTILE_SITE_KEY=

# Object Storage (Hetzner / S3 Compatible)
OBJECT_STORAGE_ENABLED=false
OBJECT_STORAGE_ENDPOINT=
OBJECT_STORAGE_REGION=eu-central-1
OBJECT_STORAGE_BUCKET=
OBJECT_STORAGE_ACCESS_KEY=
OBJECT_STORAGE_SECRET_KEY=
OBJECT_STORAGE_REPORT_PREFIX=reports/
OBJECT_STORAGE_PUBLIC_URL=
OBJECT_STORAGE_FORCE_PATH_STYLE=true
OBJECT_STORAGE_SIGNED_URL_SECONDS=3600

# Payment Providers - DISABLED for 100% Free Launch
# All payment integrations are disabled to provide unlimited free scanning
# No PRO tier, no subscriptions, no wallet requirements
STRIPE_ENABLED=false
LEMONSQUEEZY_ENABLED=false
WALLET_AUTH_ENABLED=false

# Worker Configuration
# Concurrency is an infrastructure constraint, not a user limit
WORKER_CONCURRENCY=2
